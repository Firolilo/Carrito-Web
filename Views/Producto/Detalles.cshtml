@model CarritoDeComprasMVC.Models.Entity.Producto

<div class="container mt-5">
    <h2 class="text-center">@Model.Nombre</h2>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded mb-3" style="max-width: 300px;">
            <p class="text-muted">@Model.Descripción</p>
            <p class="fs-4">Precio: <strong>$@Model.Precio</strong></p>
            <p>Stock disponible: <span class="badge bg-success">@Model.Stock</span></p>

            <form method="post" action="/Carrito/Agregar" class="mt-3">
                <input type="hidden" name="productoId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="cantidad" class="form-label">Cantidad:</label>
                    <input type="number" id="cantidad" name="cantidad" min="1" max="@Model.Stock" value="1" class="form-control w-50 mx-auto text-center" />
                </div>
                <button type="submit" class="btn btn-success">Agregar al carrito</button>
            </form>
        </div>
    </div>
</div>
