@model CarritoDeComprasMVC.Models.Entity.Producto

<h2>@Model.Nombre</h2>
<img src="@Model.ImagenUrl" alt="@Model.Nombre" width="200">
<p>@Model.Descripción</p>
<p>Precio: $@Model.Precio</p>
<p>Stock disponible: @Model.Stock</p>

<form method="post" action="/Carrito/Agregar">
    <input type="hidden" name="productoId" value="@Model.Id">
    <label for="cantidad">Cantidad:</label>
    <input type="number" id="cantidad" name="cantidad" min="1" max="@Model.Stock" value="1">
    <button type="submit">Agregar al carrito</button>
</form>
