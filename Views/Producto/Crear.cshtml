@model CarritoDeComprasMVC.Models.Entity.Producto

<h2>Crear Producto</h2>
<form asp-action="Crear" method="post">
    <label>Nombre:</label>
    <input asp-for="Nombre" />
    <label>Descripción:</label>
    <textarea asp-for="Descripción"></textarea>
    <label>Precio:</label>
    <input asp-for="Precio" type="number" step="0.01" />
    <label>Stock:</label>
    <input asp-for="Stock" type="number" />
    <label>Imagen URL:</label>
    <input asp-for="ImagenUrl" />
    <button type="submit">Guardar</button>
</form>
