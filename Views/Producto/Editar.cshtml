@model CarritoDeComprasMVC.Models.Entity.Producto

<div class="container mt-5">
    <h2 class="text-center">Editar Producto</h2>
    <form asp-action="Editar" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre:</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
        </div>

        <div class="mb-3">
            <label asp-for="Descripción" class="form-label">Descripción:</label>
            <textarea asp-for="Descripción" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Precio" class="form-label">Precio:</label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="Precio" />
        </div>

        <div class="mb-3">
            <label asp-for="Stock" class="form-label">Stock:</label>
            <input asp-for="Stock" type="number" class="form-control" placeholder="Cantidad en stock" />
        </div>

        <div class="mb-3">
            <label asp-for="ImagenUrl" class="form-label">Imagen URL:</label>
            <input asp-for="ImagenUrl" class="form-control" placeholder="URL de la imagen" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
    </form>
</div>
