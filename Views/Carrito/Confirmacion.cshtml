@model CarritoDeComprasMVC.Models.Entity.Orden

<div class="container mt-5">
    <h2 class="text-center">Confirmación de Compra</h2>
    <p class="text-muted text-center">Fecha: @Model.FechaCreacion.ToString("g")</p>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col" class="text-center">Cantidad</th>
                    <th scope="col" class="text-center">Precio Unitario</th>
                    <th scope="col" class="text-center">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Producto.Nombre</td>
                        <td class="text-center">@item.Cantidad</td>
                        <td class="text-center">@item.PrecioUnitario.ToString("C")</td>
                        <td class="text-center">@item.PrecioTotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h3 class="text-end text-primary">Total de la Orden: @Model.Total.ToString("C")</h3>
</div>
